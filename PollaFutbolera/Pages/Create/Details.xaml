<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PollaFutbolera.Pages.Create.Details"
             Title="Details"
             Shell.TabBarIsVisible="False">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Detalles de la polla" FontSize="Title" HorizontalTextAlignment="Center"/>
                <Entry x:Name="Rule1" Placeholder="Regla 1"/>
                <Entry x:Name="Como" Placeholder="Comodines"/>
                <Entry x:Name="Cost" Placeholder="Costo"/>

                <Button Text="Continuar" Clicked="GoToFinish"/>
            </StackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>